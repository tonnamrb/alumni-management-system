{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=alumni_db;Username=postgres;Password=postgres"
  },
  "Authentication": {
    "Jwt": {
      "Key": "alumni-super-secret-key-32-characters-minimum-required",
      "Issuer": "alumni-api",
      "Audience": "alumni-users",
      "ExpirationMinutes": 60
    }
  },
  "AWS": {
    "S3": {
      "BucketName": "alumni-app-images",
      "Region": "us-east-1",
      "AccessKey": "",
      "SecretKey": ""
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:5000"
      }
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/alumni-api-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "CORS": {
    "AllowedOrigins": ["http://localhost:3000", "http://localhost:5173"],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "AllowedHeaders": ["*"]
  },
  "Email": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": "587",
    "FromEmail": "noreply@alumni-system.com",
    "FromName": "Alumni System",
    "Username": "your-email@gmail.com",
    "Password": "your-app-password",
    "EnableSsl": "true"
  }
}
