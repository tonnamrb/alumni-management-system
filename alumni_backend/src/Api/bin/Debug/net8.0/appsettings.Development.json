{
  "Database": {
    "UsePostgreSQL": true
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=alumni_db_dev;Username=postgres;Password=12345678"
  },
  "Authentication": {
    "Jwt": {
      "Key": "alumni-super-secret-key-32-characters-minimum-required-dev",
      "Issuer": "alumni-api-dev",
      "Audience": "alumni-users-dev",
      "ExpirationMinutes": 120
    }
  },
  "AWS": {
    "S3": {
      "BucketName": "alumni-app-images-dev",
      "Region": "us-east-1",
      "AccessKey": "dev-access-key",
      "SecretKey": "dev-secret-key"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      }
    ]
  },
  "CORS": {
    "AllowedOrigins": ["http://localhost:3000", "http://localhost:5173", "http://localhost:8080"],
    "AllowedMethods": ["*"],
    "AllowedHeaders": ["*"]
  }
}
